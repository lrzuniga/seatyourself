<form>
	<fieldset>
		<legend>New Reservation</legend>

		<%= form_for ([@restaurant, @reservation]) do |f| %>
		<div class="row">
			<div class="large-4 columns">
				<%= f.label :party_size %>
				<%= f.number_field :party_size %>
			</div>
		</div>

		<div class="row">
			<div class="small-3 columns">
				<%= f.label :time %>
				<%= f.select :time, @restaurant.timeslots.collect { |slot| [slot.strftime("%A, %b %d, %l:%M %p"), slot.utc]} %>
			</div>
		</div>


		<%= f.submit %>


		<% end %>
	</fieldset>
</form>
